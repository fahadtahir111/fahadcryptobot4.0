// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  credits   Int      @default(3)
  isAdmin   Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chartAnalyses ChartAnalysis[]
  portfolios    Portfolio[]     @relation("UserPortfolio")
  chatMessages  ChatMessage[]
  creditTransactions CreditTransaction[]
  tradingNodes TradingNode[]
}

model ChartAnalysis {
  id          String   @id @default(cuid())
  userId      String
  symbol      String?
  timeframe   String?
  imageUrl    String
  analysis    Json // Store the full AI analysis response
  creditsUsed Int      @default(1)
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  amount    Float
  buyPrice  Float
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation("UserPortfolio", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  message   String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AdminActivity {
  id        String   @id @default(cuid())
  adminId   String
  action    String   // 'user_created', 'user_updated', 'credits_modified', etc.
  targetId  String?
  details   Json?
  createdAt DateTime @default(now())
}

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  type        String   // 'earned', 'purchased', 'used', 'admin_added', 'admin_removed'
  description String?
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model TradingNode {
  id        String   @id @default(cuid())
  userId    String
  name      String
  url       String
  type      String   // 'solana', 'ethereum', etc.
  status    String   @default("unknown") // "online", "offline", "unknown"
  latency   Int?     // Latency in ms
  lastCheck DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, url])
}
