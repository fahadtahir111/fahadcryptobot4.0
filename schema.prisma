// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  chartAnalyses ChartAnalysis[]
}

model ChartAnalysis {
  id        String   @id @default(cuid())
  userId    String
  symbol    String?
  timeframe String?
  imageUrl  String
  analysis  Json     // Store the full AI analysis response
  createdAt DateTime @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  amount    Float
  buyPrice  Float
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol])
}
